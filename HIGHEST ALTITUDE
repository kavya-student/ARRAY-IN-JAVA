public class arrysQuestion {
    public static int largestAltitude(int[] gain) {
        int altitude = 0, max = 0;
        for (int g : gain) {
            altitude += g;
            if (altitude > max) {
                max = altitude;
            }
        }
        return max;
    }

    public static void main(String[] args) {
        int[] gain = {-5, 1, 5, 0, -7};
        int result = largestAltitude(gain);
        System.out.println("Highest Altitude: " + result);
    }
}
