public class arrysQuestion{
    public static void main(String[] args){
        int[][] accounts = {
            {1, 3,  6},
            {2, 6,  7},
            {18, 5, 0}
        };
        int maxwealth = 0;
        for(int[] customer: accounts){
            int sum = 0;
            for(int money: customer){
                sum+=money;
            if(sum>maxwealth){
                maxwealth=sum;
            }
            }
        System.out.println(maxwealth);
        }
    }
}
